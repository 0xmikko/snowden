{
  "short_name": "Snowden",
  "name": "Snowden - share your thoughts free",
  "description": "Read between the lines",
  "manifest_version": 2,
  "browser_action": {
    "default_title": "Snowden",
    "default_icon": {
             "16": "./images/icon16.png",
             "32": "./images/icon32.png",
            "128": "./images/icon128.png" },
    "default_popup": "index.html"
  },

   "icons": {
             "16": "./images/icon16.png",
             "32": "./images/icon32.png",
            "128": "./images/icon128.png" },

  "version": "1.0",
   "background": {
      "persistent": true,
      "scripts": ["runtime~background.js"]
   },
   "web_accessible_resources": ["page.js"],
   "permissions": ["tabs", "nativeMessaging"],

   "content_security_policy": "default-src 'self'; script-src 'self' 'sha256-5As4+3YpY62+l38PsxCEkjB1R4YtyktBtRScTJ3fyLU='; style-src * 'unsafe-inline'; img-src 'self' data:;"
}
